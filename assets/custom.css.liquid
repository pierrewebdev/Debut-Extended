.customize-hero .hero__overlay::before {
    background-image: linear-gradient(to left,{{ settings.color_image_overlay_gradient_1 }}, {{ settings.color_image_overlay_gradient_2 }});
    opacity: {{ settings.image_overlay__gradient_opacity }};
}

h2, h2.h2{
    font-size: 24px;
}

h3.h3{
    font-size: 18px;
}

.footer-link{
    color: inherit;
}

/*CSS for image cards in collections block*/
@media only screen and (min-width: 911px){
    div.collection-grid-item__title{
        position: absolute;
        top: 95%;
        width: 100%;
        height: 15%;
        padding: 0 5px !important;
        margin: 0;
    }

    div.collection-grid-item__title.h3{
        font-size: 20px;
    }
}

/*Size for tablet and phone screens*/
@media only screen and (max-width: 768px){
    div.collection-grid-item__title.h3{
        font-size: 24px;
    }
}

@media only screen and (max-width: 400px){
    div.collection-grid-item__title.h3{
        font-size: 18px;
    }
}

/*CSS for collection hero sections*/
.collection-hero__image{
    height: 200px;
}

/*CSS for custom content 2 column layout with image and content*/
/*Implemented this to make it responsive on viewports smaller than 769px*/

@media only screen and (max-width: 768px) {
    div.custom-content{
        flex-direction: column-reverse;
        align-items: center;
    }

    div.custom__item ,div.custom__item.custom__item--image, div.custom__item.custom__item--image div{
        max-width: 100%;
        width: 85%;
    }
}

/*CSS for nav bar*/

.site-nav__link:focus .site-nav__label, .site-nav__link:not([disabled]):hover .site-nav__label{
    border-bottom: none;
}

.site-nav__link--active .site-nav__label{
    border-bottom: none;
}

.site-nav a{
    font-size: 17px;
}

/*CSS to round off corners of images throughout theme*/
img.grid-view-item__image{
    border-radius: 12px;
}

.collection-grid-item__overlay, .feature-row__image, #CustomImage--2-518949175479{
    border-radius: 12px;
}

/*CSS to remove bottom border from product titles on hover*/
.product-card__title{
    border-bottom: none;
}